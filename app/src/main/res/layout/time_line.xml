<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_timeLine"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/border_time_table"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="1dp">

    <com.vipul.hp_hp.timelineview.TimelineView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        app:line="@color/colorLine"
        app:line_size="2dp"
        app:marker="@drawable/time_line"
        app:marker_size="20dp" />

    <TextView
        android:id="@+id/horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8h"
        android:textColor="@color/colorLine"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/nomeFacility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Estádio do Dragão"
            android:textColor="@color/colorTextTitleTimeTable"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Campo, Balnearios,Wc"
            android:textColor="@color/colorTextSubTitleTimeTable"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>

